<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="Usuario" class="entidad.Usuario" init-method="initUsuario" destroy-method="destroyUsuario">
	    <property name="usuario" value="Pepe" />
	    <property name="contrasenia" value="123" />
	</bean>
	
	<bean id="UsuarioNegocio" class="negocio.UsuarioNegocio" init-method="initUsuarioNegocio" destroy-method="destroyUsuarioNegocio">
	    <property name="usuario" ref="Usuario" />
	    <property name="usuarioDao" ref="UsuarioDao" />
	</bean>
	
	<bean id="UsuarioDao" class="dao.UsuarioDao">	    
	</bean>
</beans>
	